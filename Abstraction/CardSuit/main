package JAVA.OOP.Abstraction.CardSuit;

import java.util.Arrays;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

//        System.out.println(CardSuit.DIAMONDS.ordinal());
//        System.out.println(CardSuit.DIAMONDS.name());

        System.out.println("Card Suits:");

        Arrays.stream(CardSuit.values())
                .forEach(cardSuit -> System.out.printf("Ordinal value: %d; Name value: %S\n", cardSuit.ordinal()
                        , cardSuit.name()));
    }
}
