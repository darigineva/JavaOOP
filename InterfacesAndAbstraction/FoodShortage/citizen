package JAVA.OOP.InterfacesAndAbstraction.FoodShortage;

public class Citizen implements Person, Buyer,Identifiable {
    private String name;
    private int age;
    private String id;
    private String birthDate;
    private int food;

    public Citizen(String name, int age, String id, String birthDate) {
        setName(name);
        setAge(age);
        setId(id);
        setBirthDate(birthDate);
//        this.food = 0;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public void setId(String id) {
        this.id = id;
    }

    public void setBirthDate(String birthDate) {
        this.birthDate = birthDate;
    }

    @Override
    public String getName() {
        return name;
    }

    @Override
    public int getAge() {
        return age;
    }

    public String getId() {
        return id;
    }

    @Override
    public int getFood() {
        return food;
    }

    @Override
    public void buyFood() {
        food += 10;
    }
}
